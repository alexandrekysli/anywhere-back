{
    "compilerOptions": {
        "noEmitOnError": true,
        "strict": true,
        "removeComments": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": false,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*", "types"]
}